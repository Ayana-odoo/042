<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_packaging_form_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.form.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="packaging_weight"/>
            </xpath>
        </field>
    </record>

    <record id="product_packaging_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.tree.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="packaging_weight"/>
            </xpath>
        </field>
    </record>
</odoo>